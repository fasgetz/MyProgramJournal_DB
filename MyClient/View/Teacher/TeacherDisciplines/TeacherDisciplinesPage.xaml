<Page x:Class="MyClient.View.Teacher.TeacherDisciplines.TeacherDisciplinesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyClient.View.Teacher.TeacherDisciplines"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="954"
      DataContext="{Binding DisciplinesTeacherVM, Source={StaticResource Locator}}"      
      Title="TeacherDisciplinesPage">

    <Grid>
        <StackPanel>
            <Label Content="Ваши дисциплины" HorizontalContentAlignment="Center" Margin="10,10,10,0"  VerticalAlignment="Top" Height="50" FontSize="25"/>
            <ListView DisplayMemberPath="NameDiscipline" FontSize="16" HorizontalContentAlignment="Center" ItemsSource="{Binding disciplines}" Margin="20,0,20,0" Height="400">
                
            </ListView>
        </StackPanel>
    </Grid>
</Page>
